@model List<CQRSDesignPattern.CQRSPattern.Results.GetProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-dark">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a href="/Default/DeleteProduct/" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a href="/Default/UpdateProduct/" class="btn btn-warning">Update</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Default/AddProduct/" class="btn btn-dark">Yeni Ürün Girişi</a>
</div>